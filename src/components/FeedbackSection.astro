---
/**
 * FeedbackSection
 * Usage: <FeedbackSection />
 *
 * IMPORTANT: Set FORM_ACTION to your form handler.
 * Examples:
 * - Formspree: https://formspree.io/f/xxxxxxx
 * - Getform:  https://getform.io/f/xxxxxxx
 * - Basin:    https://usebasin.com/f/xxxxxxx
 */

const SECTION_ID = "feedback"
const FORM_ACTION = "https://usebasin.com/f/af6ab7ac8ed7" // <-- change this

const EYEBROW = "Feedback"
const TITLE = "Leave feedback (or a testimonial)"
const INTRO =
  "If we’ve worked together or if you have suggestions, I’d genuinely love to hear it. This helps me improve and helps future clients trust the process."

const THANK_YOU_NOTE = "Thank you. If you’d like a reply, include your email."
---

<section id={SECTION_ID} class="feedback" aria-labelledby="feedback-title">
  <div class="shell">
    <header class="feedback__header">
      <p class="feedback__eyebrow">{EYEBROW}</p>
      <h2 id="feedback-title" class="feedback__title">{TITLE}</h2>
      <p class="feedback__intro">{INTRO}</p>
    </header>

    <form class="feedbackCard" method="POST" action={FORM_ACTION}>
      {/* Honeypot anti-spam field (hide via CSS) */}
      <input
        class="feedback__hp"
        type="text"
        name="company"
        tabindex="-1"
        autocomplete="off"
      />

      <div class="feedbackRow">
        <label class="feedbackLabel">Rating</label>

        <fieldset class="stars" aria-label="Star rating">
          <legend class="sr-only">Star rating</legend>

          {/* Note: inputs come first; labels are stars */}
          <input id="star5" name="rating" type="radio" value="5" required />
          <label for="star5" title="5 stars">★</label>

          <input id="star4" name="rating" type="radio" value="4" />
          <label for="star4" title="4 stars">★</label>

          <input id="star3" name="rating" type="radio" value="3" />
          <label for="star3" title="3 stars">★</label>

          <input id="star2" name="rating" type="radio" value="2" />
          <label for="star2" title="2 stars">★</label>

          <input id="star1" name="rating" type="radio" value="1" />
          <label for="star1" title="1 star">★</label>

          <input
            type="hidden"
            name="_subject"
            value="New feedback submission (Presentation Ace)"
          />

          <input type="hidden" name="page" value={Astro.url.pathname} />
        </fieldset>
      </div>

      <div class="feedbackRow">
        <label class="feedbackLabel" for="message">Your feedback</label>
        <textarea
          id="message"
          name="message"
          class="feedbackTextarea"
          rows={6}
          required
          placeholder="What worked well? What should I improve? If you’re leaving a testimonial, feel free to write it as you’d like it quoted."
        ></textarea>
      </div>

      <div class="feedbackGrid">
        <div class="feedbackRow">
          <label class="feedbackLabel" for="name">Name (optional)</label>
          <input
            id="name"
            name="name"
            class="feedbackInput"
            type="text"
            placeholder="Jane Doe"
          />
        </div>

        <div class="feedbackRow">
          <label class="feedbackLabel" for="email">Email (optional)</label>
          <input
            id="email"
            name="email"
            class="feedbackInput"
            type="email"
            placeholder="jane@company.com"
            autocomplete="email"
          />
        </div>
      </div>

      <div class="feedbackChecks">
        <label class="check">
          <input type="checkbox" name="ok_to_quote" value="yes" />
          <span
            >You may use this as a testimonial (with my name/company unless you
            mark anonymous)</span
          >
        </label>

        <label class="check">
          <input type="checkbox" name="anonymous" value="yes" />
          <span>Please keep this anonymous</span>
        </label>
      </div>

      <div class="feedbackFooter">
        <button class="feedbackButton" type="submit">Send feedback</button>
        <p class="feedbackNote">{THANK_YOU_NOTE}</p>
      </div>
    </form>
  </div>

  <style>
    .feedback {
      --ink: #2a2c27;
      --accent: #cf729c;

      --text: #2b2b2b;
      --muted: #6e6e6e;

      --card: #ffffff;
      --border: rgba(0, 0, 0, 0.1);
      --shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      --radius: 16px;

      padding: clamp(28px, 5vw, 56px) 16px;
      color: var(--text);
    }

    .feedback .shell {
      max-width: 900px;
      margin: 0 auto;
    }

    .feedback__header {
      text-align: center;
      margin-bottom: 18px;
    }

    .feedback__eyebrow {
      margin: 0 0 10px;
      font-weight: 700;
      color: var(--muted);
      letter-spacing: 0.06em;
      text-transform: uppercase;
      font-size: 0.85rem;
    }

    .feedback__title {
      margin: 0;
      font-size: clamp(1.5rem, 2.2vw, 2rem);
      font-weight: 900;
      color: var(--ink);
    }

    .feedback__intro {
      margin: 12px auto 0;
      max-width: 760px;
      color: var(--muted);
      line-height: 1.65;
    }

    .feedbackCard {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 18px 18px 16px;
    }

    .feedbackRow {
      display: grid;
      gap: 8px;
      margin-top: 14px;
    }

    .feedbackLabel {
      font-weight: 700;
      color: var(--ink);
      font-size: 0.95rem;
    }

    .feedbackInput,
    .feedbackTextarea {
      width: 100%;
      border: 1px solid rgba(0, 0, 0, 0.14);
      border-radius: 12px;
      padding: 12px 12px;
      font: inherit;
      background: #fff;
      color: var(--text);
      outline: none;
    }

    .feedbackTextarea {
      resize: vertical;
      min-height: 120px;
      line-height: 1.55;
    }

    .feedbackInput:focus,
    .feedbackTextarea:focus {
      border-color: rgba(207, 114, 156, 0.55);
      box-shadow: 0 0 0 4px rgba(207, 114, 156, 0.12);
    }

    .feedbackGrid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 14px;
      margin-top: 8px;
    }

    /* Stars */
    .stars {
      display: inline-flex;
      flex-direction: row-reverse; /* so hover fills leftward */
      justify-content: flex-end;
      gap: 4px;
      border: 0;
      padding: 0;
      margin: 0;
    }

    .stars input {
      position: absolute;
      opacity: 0;
      pointer-events: none;
    }

    .stars label {
      font-size: 28px;
      line-height: 1;
      cursor: pointer;
      color: rgba(0, 0, 0, 0.18);
      transition: color 120ms ease;
      user-select: none;
    }

    .stars label:hover,
    .stars label:hover ~ label {
      color: rgba(207, 114, 156, 0.75);
    }

    .stars input:checked ~ label {
      color: var(--accent);
    }

    .feedbackChecks {
      margin-top: 14px;
      display: grid;
      gap: 10px;
    }

    .check {
      display: flex;
      gap: 10px;
      align-items: flex-start;
      color: var(--muted);
      line-height: 1.45;
      font-size: 0.95rem;
    }

    .check input {
      margin-top: 3px;
      accent-color: var(--accent);
    }

    .feedbackFooter {
      margin-top: 16px;
      display: grid;
      gap: 10px;
      justify-items: center;
    }

    .feedbackButton {
      height: 46px;
      padding: 0 20px;
      border-radius: 999px;
      border: 1px solid rgba(0, 0, 0, 0.06);
      background: var(--accent);
      color: #fff;
      font-weight: 700;
      font-size: 1rem;
      cursor: pointer;
      letter-spacing: 0.2px;
    }

    .feedbackButton:hover {
      filter: brightness(0.98);
    }

    .feedbackNote {
      margin: 0;
      text-align: center;
      color: var(--muted);
      font-size: 0.95rem;
    }

    .feedback__hp {
      display: none;
    }

    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    @media (max-width: 760px) {
      .feedbackGrid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</section>
