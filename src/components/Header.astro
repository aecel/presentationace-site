---
const currentPath = Astro.url.pathname
---

<header class="site-header">
  <div class="shell site-header__inner">
    <a href="/" class="site-header__logo" aria-label="Presentation Ace">
      <!-- <span class="site-header__mark">PA</span> -->
      <img
        src="/logo-presentation-ace.svg"
        alt="Presentation Ace"
        class="site-header__logo-img"
      />

      <!-- <span class="site-header__name">Presentation Ace</span> -->
    </a>

    <nav class="site-nav">
      <a
        href="/"
        class={`site-nav__link ${currentPath === "/" ? "site-nav__link--active" : ""}`}
      >
        Home
      </a>
      <a
        href="/portfolio"
        class={`site-nav__link ${currentPath.startsWith("/portfolio") ? "site-nav__link--active" : ""}`}
      >
        Portfolio
      </a>
      <a
        href="/services"
        class={`site-nav__link ${currentPath.startsWith("/services") ? "site-nav__link--active" : ""}`}
      >
        Services
      </a>
      <a
        href="/pricing"
        class={`site-nav__link ${currentPath.startsWith("/pricing") ? "site-nav__link--active" : ""}`}
      >
        Packages
      </a>
      <a
        href="/about"
        class={`site-nav__link ${currentPath.startsWith("/about") ? "site-nav__link--active" : ""}`}
      >
        About
      </a>
      <a
        href="/contact"
        class={`site-nav__link ${currentPath.startsWith("/contact") ? "site-nav__link--active" : ""}`}
      >
        Contact
      </a>
      <a
        href="https://portal.presentationace.com"
        class={`site-nav__link ${currentPath.startsWith("/portal") ? "site-nav__link--active" : ""}`}
        target="_blank"
        rel="noreferrer"
      >
        Client Portal â†’
      </a>
    </nav>
  </div>
</header>

<style>
  :root {
    --bg: #101318;
    --bg-alt: #15191f;
    --accent: #cf729c;
    --text: #f7f7f7;
    --muted: #a6a9b6;
    --border: #272a35;
    --font-sans:
      system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    --header-height: 56px;
  }

  body {
    padding-top: var(--header-height);
  }
  main {
    flex: 1 0 auto;
  }

  .shell {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
    /* backdrop-filter: blur(10px); */
    background: linear-gradient(
      to bottom,
      rgba(5, 6, 10, 1),
      rgba(5, 6, 10, 0.8)
    );
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
  }

  .site-header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 10px;
  }

  .site-header__logo-img {
    display: block;
    height: 35px; /* adjust to match your design */
    width: auto;
  }

  .site-nav {
    display: flex;
    gap: 18px;
    font-size: 0.9rem;
  }

  .site-nav__link {
    position: relative;
    text-decoration: none;
    color: var(--muted);
    padding: 4px 0;
    transition: color 0.12s ease;
  }

  .site-nav__link:hover {
    color: var(--text);
  }

  .site-nav__link--active {
    color: var(--text);
  }

  .site-nav__link--active::after,
  .site-nav__link:hover::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 100%;
    height: 2px;
    background: var(--accent);
    border-radius: 999px;
  }

  @media (max-width: 720px) {
    .site-header__inner {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
    }

    .site-nav {
      gap: 12px;
      flex-wrap: wrap;
    }
  }

  @media (max-width: 500px) {
    body {
      padding-top: 120px;
    }
  }
</style>
