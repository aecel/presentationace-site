---
import "../styles/services.css"
import ServiceCard from "./ServiceCard.astro"

type Service = {
  title: string
  description: string
  before: { src: string; alt: string }
  after: { src: string; alt: string }
  needs: string[]
  note?: string
}

const SECTION_ID = "services"

const services: Service[] = [
  {
    title: "Full Presentation",
    description:
      "End-to-end creation from raw inputs. Includes story/structure, slide design, charts, and light animation where it improves clarity.",
    before: {
      src: "/services/full-before.jpg",
      alt: "Rough notes / raw slides before",
    },
    after: {
      src: "/services/full-after.jpg",
      alt: "Executive-ready deck after",
    },
    needs: [
      "Goal + audience (what decision should this drive?)",
      "Raw content (doc/notes/outline) + any existing deck",
      "Brand guidelines or a reference deck (if applicable)",
      "Any data sources (spreadsheets, dashboards, key metrics)",
      "Deadline + meeting context (board, investor, internal, keynote)",
    ],
    note: "If you’re unsure what to send, start with a doc + any existing slides. I’ll guide the rest.",
  },
  {
    title: "Redesign",
    description:
      "Visual overhaul while preserving the message. Great when content is solid but the deck doesn’t feel executive-ready yet.",
    before: {
      src: "/services/redesign-before.jpg",
      alt: "Existing deck before redesign",
    },
    after: {
      src: "/services/redesign-after.jpg",
      alt: "Redesigned deck after",
    },
    needs: [
      "Current deck file (PPTX preferred)",
      "Brand guidelines or examples to match",
      "Any must-keep elements (charts, screenshots, logos)",
      "Where it will be presented (room, Zoom, projector, PDF send)",
    ],
  },
  {
    title: "Rewrite (optional)",
    description:
      "Clarity-first rewriting and tightening. Only if you want it—otherwise your wording stays intact and I focus on structure/design.",
    before: {
      src: "/services/rewrite-before.jpg",
      alt: "Wordy slide before rewrite",
    },
    after: {
      src: "/services/rewrite-after.jpg",
      alt: "Simplified slide after rewrite",
    },
    needs: [
      "Permission to edit copy (and your preference: conservative vs assertive)",
      "Any non-negotiable terms/phrasing (legal, compliance, brand voice)",
      "The audience’s familiarity level (expert vs general)",
      "Key takeaways you want them to remember",
    ],
    note: "Rewrite can be done lightly (tighten) or deeply (restructure). You choose.",
  },
  {
    title: "Reformat (match branding)",
    description:
      "Bring an existing deck into alignment with your brand system—typography, spacing, colors, components, and layout consistency.",
    before: {
      src: "/services/reformat-before.jpg",
      alt: "Off-brand deck before reformat",
    },
    after: {
      src: "/services/reformat-after.jpg",
      alt: "On-brand deck after reformat",
    },
    needs: [
      "Brand guidelines (fonts, colors, logo usage)",
      "Existing templates (if you have them) or a reference deck",
      "Any accessibility constraints (font sizes, contrast requirements)",
    ],
  },
  {
    title: "Animation",
    description:
      "Purposeful motion that guides attention and improves comprehension. (Light animation is included in most services; this is for animation-heavy work.)",
    before: {
      src: "/services/animation-before.jpg",
      alt: "Static slide before animation",
    },
    after: {
      src: "/services/animation-after.jpg",
      alt: "Animated slide after",
    },
    needs: [
      "Deck file + which slides should animate (or your goal for the sequence)",
      "Presentation context (live talk vs async send)",
      "Your preference: subtle executive motion vs more dynamic builds",
      "Any brand motion rules (if applicable)",
    ],
    note: "I optimize for clarity and speaker pacing—no flashy motion unless it serves the story.",
  },
  {
    title: "Consulting",
    description:
      "Strategy and problem-solving: structure, narrative, slide system guidance, and improving how your team produces decks.",
    before: {
      src: "/services/consulting-before.jpg",
      alt: "Messy deck process before consulting",
    },
    after: {
      src: "/services/consulting-after.jpg",
      alt: "Clearer structure/system after consulting",
    },
    needs: [
      "Your current deck(s) or examples",
      "Your constraints (time, team skill, tools, review workflow)",
      "What “good” looks like internally (examples you admire)",
      "The recurring presentation types you produce",
    ],
  },
  {
    title: "Custom Illustration",
    description:
      "Clean, on-brand visuals for concepts that screenshots or stock icons can’t express—systems, processes, architectures, and product flows.",
    before: {
      src: "/services/illustration-before.jpg",
      alt: "Complex concept before illustration",
    },
    after: {
      src: "/services/illustration-after.jpg",
      alt: "Custom illustrated concept after",
    },
    needs: [
      "A rough sketch (even ugly) or written explanation",
      "Any terminology or labels that must be used",
      "Style reference (minimal, technical, playful, etc.)",
      "Where it will live (slide, PDF, web, internal docs)",
    ],
  },

  // Smart “extra” services worth offering:
  {
    title: "Template & Slide System",
    description:
      "A reusable slide library and template system so your team can move faster while staying consistent and on-brand.",
    before: {
      src: "/services/template-before.jpg",
      alt: "Inconsistent slides before template system",
    },
    after: {
      src: "/services/template-after.jpg",
      alt: "Consistent template system after",
    },
    needs: [
      "Brand guidelines + fonts (or closest equivalents)",
      "3–5 decks that represent your real-world use cases",
      "Common slide types you repeat (updates, KPIs, roadmap, etc.)",
      "Any internal rules (logo placement, confidentiality marks, footers)",
    ],
    note: "This is a high-leverage option for teams with recurring decks and multiple presenters.",
  },
  {
    title: "Data Visualization Cleanup",
    description:
      "Make KPI and chart slides decision-ready—clear hierarchy, correct emphasis, and charts that tell the story in seconds.",
    before: {
      src: "/services/dataviz-before.jpg",
      alt: "Before: cluttered chart slide",
    },
    after: {
      src: "/services/dataviz-after.jpg",
      alt: "After: clarified KPI / chart slide",
    },
    needs: [
      "Source data (sheet/link) or the underlying numbers used for charts",
      "What you want the audience to conclude (the takeaway)",
      "Definitions for metrics (if there’s ambiguity)",
      "Any brand chart rules (colors, fonts, labels, decimals)",
    ],
    note: "If the data is sensitive, you can redact values and I’ll build the structure first.",
  },
  {
    title: "Pitch Polish Sprint",
    description:
      "A focused, fast iteration cycle before a high-stakes meeting—tighten narrative flow, sharpen visuals, and improve pacing.",
    before: {
      src: "/services/pitch-before.jpg",
      alt: "Before: rough pitch slide set",
    },
    after: {
      src: "/services/pitch-after.jpg",
      alt: "After: polished pitch slides",
    },
    needs: [
      "Current deck version (PPTX) and the deadline/date",
      "What kind of pitch (investor, sales, partner, internal)",
      "Primary objections or questions you expect",
      "Priority slides (the 5–10 that matter most)",
    ],
    note: "Best used 2–5 business days before the meeting so we have room for 1–2 review loops.",
  },
]

const EYEBROW = "Services"
const TITLE = "What I can do for your presentations"
const INTRO =
  "From full builds to focused upgrades, I help leaders and teams ship executive-ready decks with clarity, polish, and reliable turnaround."
---

<section id={SECTION_ID} class="services" aria-labelledby="services-title">
  <div class="shell">
    <header class="services__header">
      <p class="services__eyebrow">{EYEBROW}</p>
      <h2 id="services-title" class="services__title">{TITLE}</h2>
      <p class="services__intro">{INTRO}</p>
    </header>

    <div class="services__grid">
      {
        services.map((s) => (
          <ServiceCard
            title={s.title}
            description={s.description}
            before={s.before}
            after={s.after}
            needs={s.needs}
            note={s.note}
          />
        ))
      }
    </div>
  </div>
</section>
