---
/**
 * HomeSlidesShowcase
 * Usage: <HomeSlidesShowcase />
 *
 * Put images in /public/home-slides/...
 * Toggle theme by changing section class:
 *  - "slidesShowcase slidesShowcase--light"
 *  - "slidesShowcase slidesShowcase--dark"
 */

type Slide = {
  src: string
  alt: string
}

const SECTION_ID = "slides"

const slides: Slide[] = [
  { src: "/samples/full/Slide09.webp", alt: "Slide sample 01" },
  { src: "/samples/full/Slide12.webp", alt: "Slide sample 02" },
  { src: "/samples/full/Slide18.webp", alt: "Slide sample 03" },
  { src: "/samples/full/Slide05.webp", alt: "Slide sample 04" },
  { src: "/samples/full/Slide11.webp", alt: "Slide sample 05" },
  { src: "/samples/full/Slide14.webp", alt: "Slide sample 06" },
]

const CTA_HREF = "/portfolio"
---

<section
  id={SECTION_ID}
  class="slidesShowcase slidesShowcase--light"
  aria-labelledby="slidesShowcase-title"
>
  <div class="shell">
    <header class="slidesShowcase__header">
      <p class="slidesShowcase__eyebrow">Portfolio preview</p>
      <h2 id="slidesShowcase-title" class="slidesShowcase__title">
        Slide samples
      </h2>
      <p class="slidesShowcase__intro">
        Clean hierarchy, disciplined layout, and executive-ready polish. Explore
        more samples in the portfolio.
      </p>
    </header>

    <div class="mosaic" aria-label="Slide samples">
      {/* Large */}
      <a class="tile tile--a" href={CTA_HREF} aria-label="View portfolio">
        <img
          class="tile__img"
          src={slides[0].src}
          alt={slides[0].alt}
          loading="lazy"
          decoding="async"
        />
      </a>

      {/* Medium */}
      <a class="tile tile--b" href={CTA_HREF} aria-label="View portfolio">
        <img
          class="tile__img"
          src={slides[1].src}
          alt={slides[1].alt}
          loading="lazy"
          decoding="async"
        />
      </a>

      <a class="tile tile--c" href={CTA_HREF} aria-label="View portfolio">
        <img
          class="tile__img"
          src={slides[2].src}
          alt={slides[2].alt}
          loading="lazy"
          decoding="async"
        />
      </a>

      {/* Small row */}
      <a class="tile tile--d" href={CTA_HREF} aria-label="View portfolio">
        <img
          class="tile__img"
          src={slides[3].src}
          alt={slides[3].alt}
          loading="lazy"
          decoding="async"
        />
      </a>

      <a class="tile tile--e" href={CTA_HREF} aria-label="View portfolio">
        <img
          class="tile__img"
          src={slides[4].src}
          alt={slides[4].alt}
          loading="lazy"
          decoding="async"
        />
      </a>

      <a class="tile tile--f" href={CTA_HREF} aria-label="View portfolio">
        <img
          class="tile__img"
          src={slides[5].src}
          alt={slides[5].alt}
          loading="lazy"
          decoding="async"
        />
      </a>
    </div>

    <div class="slidesShowcase__ctaRow">
      <a class="btn" href={CTA_HREF}>View full portfolio</a>
      <p class="slidesShowcase__note">
        Most client work is anonymized or shared with permission.
      </p>
    </div>
  </div>

  <style>
    .slidesShowcase {
      --accent: #cf729c;

      --ink: #2a2c27;
      --text: #2b2b2b;
      --muted: #6e6e6e;

      --card: rgba(255, 255, 255, 0.85);
      --border: rgba(0, 0, 0, 0.1);
      --shadow: 0 12px 30px rgba(0, 0, 0, 0.12);

      --radius: 16px;

      padding: clamp(28px, 5vw, 56px) 16px;
      color: var(--text);
    }

    /* Light mode: inherit page bg (#f2f2f2) */
    .slidesShowcase--light {
      background: unset;
    }

    /* Dark mode: section has its own background */
    .slidesShowcase--dark {
      background: #0f1216;

      --ink: #f2f4f8;
      --text: #e8eaf0;
      --muted: #a8afbd;

      --card: rgba(21, 26, 32, 0.88);
      --border: rgba(255, 255, 255, 0.1);
      --shadow: 0 12px 30px rgba(0, 0, 0, 0.45);
    }

    .slidesShowcase .shell {
      max-width: 1100px;
      margin: 0 auto;
    }

    .slidesShowcase__header {
      text-align: center;
      margin-bottom: 18px;
    }

    .slidesShowcase__eyebrow {
      margin: 0 0 10px;
      font-weight: 700;
      color: var(--muted);
      letter-spacing: 0.06em;
      text-transform: uppercase;
      font-size: 0.85rem;
    }

    .slidesShowcase__title {
      margin: 0;
      font-size: clamp(1.5rem, 2.2vw, 2rem);
      font-weight: 900;
      color: var(--ink);
    }

    .slidesShowcase__intro {
      margin: 12px auto 0;
      max-width: 860px;
      color: var(--muted);
      line-height: 1.65;
    }

    /* Mosaic layout */
    .mosaic {
      margin-top: 18px;
      display: grid;
      grid-template-columns: 2fr 1fr 1fr;
      grid-template-rows: 220px 220px 160px;
      gap: 16px;
    }

    .tile {
      display: block;
      border-radius: var(--radius);
      overflow: hidden;
      border: 1px solid var(--border);
      box-shadow: var(--shadow);
      background: var(--card);
      text-decoration: none;
      position: relative;
      transform: translateZ(0);
    }

    .tile::after {
      /* subtle hover sheen */
      content: "";
      position: absolute;
      inset: 0;
      background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0),
        rgba(0, 0, 0, 0.1)
      );
      opacity: 0;
      transition: opacity 160ms ease;
      pointer-events: none;
    }

    .tile__img {
      width: 100%;
      height: 100%;
      object-fit: cover; /* for slide screenshots, cover looks bold; can switch to contain */
      display: block;
      transform: scale(1);
      transition: transform 180ms ease;
    }

    .tile:hover .tile__img {
      transform: scale(1.02);
    }

    .tile:hover::after {
      opacity: 1;
    }

    /* Grid placements */
    .tile--a {
      grid-column: 1;
      grid-row: 1 / span 2;
    }
    .tile--b {
      grid-column: 2;
      grid-row: 1;
    }
    .tile--c {
      grid-column: 3;
      grid-row: 1;
    }
    .tile--d {
      grid-column: 2;
      grid-row: 2;
    }
    .tile--e {
      grid-column: 3;
      grid-row: 2;
    }
    .tile--f {
      grid-column: 1 / span 3;
      grid-row: 3;
    }

    .slidesShowcase__ctaRow {
      margin-top: 18px;
      display: grid;
      gap: 10px;
      justify-items: center;
      text-align: center;
    }

    .btn {
      height: 46px;
      padding: 0 22px;
      border-radius: 999px;
      background: var(--accent);
      color: #fff;
      text-decoration: none;
      font-weight: 900;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .btn:hover {
      filter: brightness(0.98);
    }

    .slidesShowcase__note {
      margin: 0;
      color: var(--muted);
      font-size: 0.95rem;
      line-height: 1.55;
      max-width: 860px;
    }

    /* Responsive */
    @media (max-width: 980px) {
      .mosaic {
        grid-template-columns: 1fr;
        grid-template-rows: auto;
      }

      .tile--a,
      .tile--b,
      .tile--c,
      .tile--d,
      .tile--e,
      .tile--f {
        grid-column: auto;
        grid-row: auto;
      }

      .tile__img {
        aspect-ratio: 16 / 9;
        height: auto;
      }
    }
  </style>
</section>
