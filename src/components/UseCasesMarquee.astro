---
const SECTION_ID = "use-cases"

const useCases = [
  // Executive / leadership internal
  "Executive staff meeting updates",
  "Operating reviews / business reviews",
  "Quarterly business reviews (QBRs)",
  "Board prep & board update decks",
  "KPI / metrics readouts",
  "OKR planning & check-ins",
  "Strategy refresh & priorities",
  "Annual planning (budget / headcount)",
  "Leadership offsites",
  "Org updates & change announcements",
  "Cross-functional alignment decks",
  "Executive decision decks (slide memos)",
  "Business cases & ROI justification",
  "Program / initiative readouts (risks, asks)",
  "Product strategy narratives",
  "Roadmap updates (exec-friendly)",
  "Launch readouts (internal/executive)",
  "Investor updates (when relevant)",
  "Executive keynotes & talks",
  "Partner / stakeholder briefings",

  // Product / technical internal
  "Product roadmap / strategy decks",
  "Product launches (internal/external)",
  "Internal product demos",
  "Technical walkthroughs",
  "Engineering / architecture reviews",
  "Incident / postmortem readouts",
  "Program status & project updates",
  "Process documentation (slide format)",
  "Decision memos (slide format)",

  // External (still include, but less dominant)
  "Investor decks & fundraising",
  "Sales decks & proposals",
  "Partner pitches",
  "Conference keynotes",
  "Webinars & talks",
  "Customer case studies",
  "Hiring / recruiting decks",
  "Internal enablement decks",
]

const row1 = useCases.slice(0, Math.ceil(useCases.length / 2))
const row2 = useCases.slice(Math.ceil(useCases.length / 2))
---

<section
  id={SECTION_ID}
  class="useCases useCases--dark"
  aria-labelledby="useCases-title"
>
  <div class="shell">
    <header class="useCases__header">
      <p class="useCases__eyebrow">Use cases</p>
      <h2 id="useCases-title" class="useCases__title">
        Where this work shows up
      </h2>
      <p class="useCases__intro">
        Presentation design support for the moments that matter. Big meetings,
        recurring reporting, and highâ€‘stakes communication.
      </p>
    </header>
  </div>

  <div class="useCases__marquee" aria-hidden="true">
    <!-- Row 1 (left-to-right) -->
    <div class="marquee marquee--ltr">
      <div class="marquee__track">
        {row1.map((t) => <span class="pill">{t}</span>)}
        {row1.map((t) => <span class="pill">{t}</span>)}
      </div>
    </div>

    <!-- Row 2 (right-to-left) -->
    <div class="marquee marquee--rtl">
      <div class="marquee__track">
        {row2.map((t) => <span class="pill">{t}</span>)}
        {row2.map((t) => <span class="pill">{t}</span>)}
      </div>
    </div>

    <!-- Screen-reader friendly list -->
    <ul class="srList" aria-label="Use cases list">
      {useCases.map((t) => <li>{t}</li>)}
    </ul>
  </div>

  <style>
    .useCases {
      --accent: #cf729c;

      /* defaults (light mode values) */
      --ink: #2a2c27;
      --text: #2b2b2b;
      --muted: #6e6e6e;

      --pill-bg: rgba(255, 255, 255, 0.85);
      --pill-border: rgba(0, 0, 0, 0.1);
      --pill-text: #2b2b2b;

      padding: clamp(28px, 5vw, 56px) 16px;
      color: var(--text);
    }

    /* Light theme: inherits page background (you said page is already #f2f2f2) */
    .useCases--light {
      background: unset;
    }

    /* Dark theme: has its own background like your other dark sections */
    .useCases--dark {
      background: #0f1216;

      --ink: #f2f4f8;
      --text: #e8eaf0;
      --muted: #a8afbd;

      --pill-bg: rgba(21, 26, 32, 0.85);
      --pill-border: rgba(255, 255, 255, 0.1);
      --pill-text: #f2f4f8;
    }

    .useCases--dark {
      border-top: 1px solid rgba(255, 255, 255, 0.06);
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    .useCases .shell {
      max-width: 1100px;
      margin: 0 auto;
    }

    .useCases__header {
      text-align: center;
      margin-bottom: 18px;
    }

    .useCases__eyebrow {
      margin: 0 0 10px;
      font-weight: 700;
      color: var(--muted);
      letter-spacing: 0.06em;
      text-transform: uppercase;
      font-size: 0.85rem;
    }

    .useCases__title {
      margin: 0;
      font-size: clamp(1.5rem, 2.2vw, 2rem);
      font-weight: 900;
      color: var(--ink);
    }

    .useCases__intro {
      margin: 12px auto 0;
      max-width: 860px;
      color: var(--muted);
      line-height: 1.65;
    }

    .useCases__marquee {
      margin-top: 18px;
      overflow: hidden;
      position: relative;

      /* soft edge fade */
      mask-image: linear-gradient(
        to right,
        transparent 0%,
        black 10%,
        black 90%,
        transparent 100%
      );
    }

    .marquee {
      overflow: hidden;
      padding: 10px 0;
    }

    .marquee__track {
      display: flex;
      gap: 12px;
      width: max-content;
      will-change: transform;
      animation: scroll 30s linear infinite;
    }

    .marquee--rtl .marquee__track {
      animation-direction: reverse;
      animation-duration: 34s;
    }

    .marquee--ltr .marquee__track {
      animation-duration: 30s;
    }

    .pill {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 14px;
      border-radius: 999px;
      border: 1px solid var(--pill-border);
      background: var(--pill-bg);
      color: var(--pill-text);
      /* font-weight: 800; */
      font-size: 0.95rem;
      white-space: nowrap;
      box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
    }

    @keyframes scroll {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(-50%);
      }
    }

    .srList {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    @media (prefers-reduced-motion: reduce) {
      .marquee__track {
        animation: none;
      }
      .useCases__marquee {
        mask-image: none;
      }
    }

    @media (max-width: 520px) {
      .pill {
        font-size: 0.9rem;
        padding: 9px 12px;
      }
      .marquee--ltr .marquee__track {
        animation-duration: 24s;
      }
      .marquee--rtl .marquee__track {
        animation-duration: 26s;
      }
    }
  </style>
</section>
