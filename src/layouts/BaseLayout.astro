---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

const {
  title = "Presentation Ace | Executive Presentation Designer",
  description = "Executive PowerPoint presentation design for founders, VPs, and senior leaders.",
} = Astro.props

const SITE_URL = "https://presentationace.com"
const BRAND = "Presentation Ace"
const EMAIL = "ace@presentationace.com"

// Update these paths if yours differ
const LOGO_URL = `${SITE_URL}/logo-presentation-ace.svg`
const AVATAR_URL = `${SITE_URL}/logo-presentation-ace-A.svg` // or your gravatar/local avatar

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${SITE_URL}/#organization`,
      name: BRAND,
      url: SITE_URL,
      logo: {
        "@type": "ImageObject",
        url: LOGO_URL,
      },
      email: EMAIL,
      contactPoint: [
        {
          "@type": "ContactPoint",
          contactType: "customer support",
          email: EMAIL,
          availableLanguage: ["en"],
        },
      ],
    },
    {
      "@type": "Person",
      "@id": `${SITE_URL}/#person`,
      name: "Ace Acu√±a",
      url: SITE_URL,
      image: AVATAR_URL,
      email: EMAIL,
      jobTitle: "Executive presentation designer",
      worksFor: { "@id": `${SITE_URL}/#organization` },
    },
    {
      // Optional but helpful: label the site itself
      "@type": "WebSite",
      "@id": `${SITE_URL}/#website`,
      url: SITE_URL,
      name: BRAND,
      publisher: { "@id": `${SITE_URL}/#organization` },
    },
  ],
}
---

<html lang="en">
  <head>
    <!-- Other head elements like <title>, <meta>, and your CSS file link go here -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href="https://presentationace.com/" />
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    <title>
      {title}
    </title>

    <!-- DM Serif Text and DM Serif Display from Google Fonts -->
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=DM+Serif+Text:ital@0;1&display=swap"
      rel="stylesheet"
    /> -->
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
